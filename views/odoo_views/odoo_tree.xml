<odoo>
    <record id="ma_tree_view_tree" model="ir.ui.view">
        <field name="name">ma.tree.view.tree</field>
        <field name="model">ma.tree.view</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="ma_tree_action_view" model="ir.actions.act_window">
        <field name="name">Tree View</field>
        <field name="res_model">ma.tree.view</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>