<odoo>
    <record id="ma_api_returns_form_view" model="ir.ui.view">
        <field name="name">ma.api.returns.form.view</field>
        <field name="model">ma.api.returns</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ma_api_returns_tree_view" model="ir.ui.view">
        <field name="name">ma.api.returns.tree.view</field>
        <field name="model">ma.api.returns</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="ma_api_returns_action" model="ir.actions.act_window">
        <field name="name">Api results</field>
        <field name="res_model">ma.api.returns</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>