<odoo>
    <data>
        <!-- Form View -->
        <record id="ma_abstract_model_form_view" model="ir.ui.view">
            <field name="name">ma.abstract.model.form.view</field>
            <field name="model">ma.test.model</field>
            <field name="arch" type="xml">
                <form string="Form View">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="name_f"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ma_abstract_model_tree_view" model="ir.ui.view">
            <field name="name">ma.abstract.model.tree.view</field>
            <field name="model">ma.test.model</field>
            <field name="arch" type="xml">
                <tree string="This is Tree View">
                    <field name="name"/>
                    <field name="name_f"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="ma_abstract_model_action" model="ir.actions.act_window">
            <field name="name">Abstract</field>
            <field name="res_model">ma.test.model</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
