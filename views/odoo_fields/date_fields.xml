<odoo>
    <data>
        <record id="ma_date_field_form_view" model="ir.ui.view">
            <field name="name">ma.date.field.form.view</field>
            <field name="model">ma.date.field</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="enter_today_date"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="ma_date_field_tree_view" model="ir.ui.view">
            <field name="name">ma.date.field.tree.view</field>
            <field name="model">ma.date.field</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="enter_today_date"/>
                </tree>
            </field>
        </record>

        <record id="ma_date_field_action" model="ir.actions.act_window">
            <field name="name">Date Field</field>
            <field name="res_model">ma.date.field</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
