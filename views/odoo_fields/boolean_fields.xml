<odoo>
    <data>
        <record id="ma_boolean_field_form_view" model="ir.ui.view">
            <field name="name">ma.boolean.field.form.view</field>
            <field name="model">ma.boolean.field</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="you_are_above_18"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="ma_boolean_field_tree_view" model="ir.ui.view">
            <field name="name">ma.boolean.field.tree.view</field>
            <field name="model">ma.boolean.field</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="you_are_above_18"/>
                </tree>
            </field>
        </record>

        <record id="ma_boolean_field_action" model="ir.actions.act_window">
            <field name="name">Boolean Field</field>
            <field name="res_model">ma.boolean.field</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
