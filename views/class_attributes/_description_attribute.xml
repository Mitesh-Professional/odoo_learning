<odoo>
    <record id="ma_description_attribute_form_view" model="ir.ui.view">
        <field name="name">ma.description.attribute.form.view</field>
        <field name="model">ma.description</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>What is _Description?</h1>
                    <h2>In Odoo, the _description attribute provides a human-readable name for a model, used in the user interface to help users understand its purpose.</h2>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ma_description_attribute_action" model="ir.actions.act_window">
        <field name="name">_Name</field>
        <field name="res_model">ma.description</field>
        <field name="view_mode">form</field>
    </record>
</odoo>