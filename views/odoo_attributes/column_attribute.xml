<odoo>
    <data>
        <record id="ma_column_attribute_form_view" model="ir.ui.view">
            <field name="name">ma.column.attribute.form.view</field>
            <field name="model">ma.column.attribute</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name_value"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="ma_column_attribute_tree_view" model="ir.ui.view">
            <field name="name">ma.column.attribute.tree.view</field>
            <field name="model">ma.column.attribute</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name_value"/>
                </tree>
            </field>
        </record>

        <record id="ma_column_attribute_action" model="ir.actions.act_window">
            <field name="name">Column Attribute</field>
            <field name="res_model">ma.column.attribute</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
