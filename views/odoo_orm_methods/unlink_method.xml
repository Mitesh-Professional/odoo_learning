<odoo>
    <!-- Form View -->
    <record id="ma_unlink_method_form_view" model="ir.ui.view">
        <field name="name">ma.unlink.method.form.view</field>
        <field name="model">ma.unlink.method</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="person_age"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="ma_unlink_method_tree_view" model="ir.ui.view">
        <field name="name">ma.unlink.method.tree.view</field>
        <field name="model">ma.unlink.method</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="person_age"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="ma_unlink_method_action" model="ir.actions.act_window">
        <field name="name">Api Model Unlink Multi</field>
        <field name="res_model">ma.unlink.method</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
