<odoo>
    <!-- Form View -->
    <record id="ma_name_get_method_form_view" model="ir.ui.view">
        <field name="name">ma.name.get.method.form.view</field>
        <field name="model">ma.name.get.method</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="ma_name_get_method_tree_view" model="ir.ui.view">
        <field name="name">ma.name.get.method.tree.view</field>
        <field name="model">ma.name.get.method</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="ma_name_get_method_action" model="ir.actions.act_window">
        <field name="name">Name Get Method</field>
        <field name="res_model">ma.name.get.method</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
